{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["./src"],
      "tests": ["tests/*"],
      "@components/*": ["src/components/*"],
      "@containers/*":["src/containers/*"],
      "@assets/*":["src/assets/*"], 
      "@navigation/*":["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@store/*" : ["src/store/*"],
      "@utils/*" : ["src/utils/*"],
      "@service/*" : ["src/service/*"],
    },
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}